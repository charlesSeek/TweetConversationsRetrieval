extends ../layout
block content
  .container#TopicSearchPage
    .row
        form.form-horizontal(id="searchForm",method="post",action="/topics/search/new")
          .form-group
            .col-md-3
              label.control-label(for="inputTopic") #Search Topic
            .col-md-6
              input#inputTopic.form-control(type="text",name="query[topic]"
              value="#{topic}",required,placeholder="please input the topic for search")
          .form-group
            .col-md-3
              label.control-label(for="inputConversations") Max Number of conversations
            .col-md-6
              input#inputConversations.form-control(type="number",min="1",max="10",name="query[limits]"
              value="#{limits}",required,placeholder="please input a number no more than 10")
          .form-group
            .col-md-offset-3.col-md-8
              button.btn.btn-default(type="submit") Submit Search
  script(src='/js/searchWaiting.js')